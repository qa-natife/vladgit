<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">


    <ImageView
        android:id="@+id/image_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/name_result"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat ="@drawable/ic_icon_rezults" />

    <TextView
        android:id="@+id/name_result"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:textSize="20sp"
        android:text="Bggttytyjtyjyjwwwfff"
        android:textColor="@color/colorTextSelection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/total_points"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_result"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/total_points"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1000"
        android:textColor="@color/colorText"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guessed_words"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/name_result"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/guessed_words"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Отгадано 663 слов"
        android:textColor="@color/colorTextSelection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/total_points"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>